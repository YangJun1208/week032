<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/content_three"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView_three_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <ImageView
        android:id="@+id/imageView_three_pic_s"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/textView_three_title"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <ImageView
        android:id="@+id/imageView_three_pic_s2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintRight_toLeftOf="@id/imageView_three_pic_s3"
        app:layout_constraintLeft_toRightOf="@id/imageView_three_pic_s"
        app:layout_constraintTop_toBottomOf="@id/textView_three_title"

        />
    <ImageView
        android:id="@+id/imageView_three_pic_s3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/textView_three_title"
        app:layout_constraintLeft_toRightOf="@id/imageView_three_pic_s2"
        app:layout_constraintRight_toRightOf="parent"

        />
    <TextView
        android:id="@+id/textView_three_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X"
        android:textSize="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imageView_three_pic_s3"
        app:layout_constraintTop_toTopOf="@id/imageView_three_pic_s3"
        app:layout_constraintBottom_toBottomOf="@id/imageView_three_pic_s3"

        />

</android.support.constraint.ConstraintLayout>