<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_one">


    <ImageView
        android:id="@+id/imageView_one_pic_s"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/textView_one_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@id/textView_one_del"
        app:layout_constraintLeft_toRightOf="@id/textView_one_title"
        app:layout_constraintTop_toTopOf="@id/textView_one_title"
        app:layout_constraintBottom_toBottomOf="@id/textView_one_title"
        />
    <TextView
        android:id="@+id/textView_one_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:text="X"
        android:textSize="30dp"
        app:layout_constraintLeft_toRightOf="@id/imageView_one_pic_s"
        app:layout_constraintTop_toTopOf="@id/imageView_one_pic_s"
        app:layout_constraintBottom_toBottomOf="@id/imageView_one_pic_s"

        />

</android.support.constraint.ConstraintLayout>